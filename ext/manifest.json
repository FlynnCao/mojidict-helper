{
  "name": "MoJiDict Helper",
  "description": "",
  "version": "1.0.0",
  "incognito": "split",
  "manifest_version": 2,
  "permissions": [
    "activeTab"
  ],
  "optional_permissions": [
    "http://*/",
    "https://*/"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "exclude_matches": [
        "https://*.mojidict.com/*"
      ],
      "css": ["style.css"],
      "js": ["main.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}

